{
    "name": "prooph/service-bus",
    "description": "PHP Enterprise Service Bus Implementation supporting CQRS and DDD",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/prooph/service-bus/",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de/"
        }
    ],
    "keywords": [
        "prooph",
        "Messaging",
        "CQRS",
        "DDD"
    ],
    "require": {
        "php": ">=5.5",
        "beberlei/assert": "~2.0",
        "prooph/common" : "~3.1",
        "react/promise" : "~2.2",
        "container-interop/container-interop" : "~1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.7",
        "satooshi/php-coveralls": "dev-master"
    },
    "suggest": {
        "prooph/event-store": "Let the EventBus dispatch persisted DomainEvents",
        "zendframework/zend-servicemanager": "Use Zf2 ServiceManager to lazy load your handlers and listeners"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\ServiceBus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prooph\\ServiceBusTest\\": "tests/"
        }
    }
}
